# Africa's Talking Configuration
AFRICASTALKING_USERNAME=your_username_here
AFRICASTALKING_API_KEY=your_api_key_here
AFRICASTALKING_ENVIRONMENT=sandbox  # or production

# Database Configuration
# For SQLite (development/hackathon)
DATABASE_URL=sqlite:///./ivr_tutor.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost/ivr_tutor

# Application Settings
APP_NAME=IVR Tutor
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Voice Configuration
IVR_BASE_URL=https://your-ngrok-url.ngrok.io
VOICE_CALLBACK_URL=${IVR_BASE_URL}/api/voice/callback
SMS_CALLBACK_URL=${IVR_BASE_URL}/api/sms/callback

# Content Storage (optional - for audio files)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=ivr-tutor-content
# AWS_REGION=us-east-1

# SMS Settings
DEFAULT_SMS_SENDER=IVR_TUTOR
SMS_DAILY_REMINDER_TIME=09:00